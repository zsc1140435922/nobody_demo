CREATE TABLE `basemulti_supplier_activity` (
  `voucher_id` VARCHAR(32) NOT NULL COMMENT '活动关联的券ID', 
  `activity_id` VARCHAR(32) NOT NULL COMMENT '活动ID', 
  `supplier_id` VARCHAR(32) NOT NULL COMMENT '商户id', 
  `market_type` tinyint(2) NOT NULL DEFAULT '1' COMMENT '营销类型 1:场景营销 2:团购营销', 
  `market_activity_type` tinyint(2) NOT NULL DEFAULT '1' COMMENT '营销活动类型 1:满减券 2:满返券 3:拉新券 4:团购券', 
  `activity_name` VARCHAR(80) NOT NULL COMMENT '活动名称',  
  `voucher_name` VARCHAR(80) NOT NULL COMMENT '券名称',  
  `voucher_type` tinyint(2) NOT NULL DEFAULT '1' COMMENT '券类型 1:优惠券 2:折扣券', 
  `face_price` DECIMAL(10,2) NOT NULL COMMENT '券面额=原价', 
  `price` DECIMAL(10,2) NOT NULL COMMENT '售价', 
  `discount` INT(10) NOT NULL COMMENT '折扣 8:8折', 
  `use_limit` DECIMAL(10,2) NOT NULL COMMENT '使用门槛 满10元可用', 
  `grant_limit` DECIMAL(10,2) NOT NULL COMMENT '发放门槛 实付满10元就返（满返券）', 
  `grant_type` tinyint(2) NOT NULL DEFAULT '1' COMMENT '发放人群类型 1:新客', 
  `activity_start_time` bigint(13) DEFAULT '0' COMMENT '活动开始时间', 
  `activity_start_time` bigint(13) DEFAULT '0' COMMENT '活动结束时间', 
  `effective_type` tinyint(2) NOT NULL DEFAULT '1' COMMENT '商品生效类型 1:购买若干天内有效，2:指定日期内有效', 
  `validity_period` INT(10) NOT NULL COMMENT '购买有效期,单位天,当effective_type=1',
  `effective_start_time` BIGINT(13) DEFAULT '0' COMMENT '券生效开始时间，13位时间戳',
  `effective_end_time` BIGINT(13) DEFAULT '0' COMMENT '券生效结束时间，13位时间戳', 
  `status` tinyint(4) DEFAULT '0' COMMENT '状态 0:待上架 1:售卖中 2:下架 3:已售罄', 
  `create_time` BIGINT(13) DEFAULT '0' COMMENT '创建时间', 
  `update_time` BIGINT(13) DEFAULT '0' COMMENT '数据更新时间', 
  PRIMARY KEY (`voucher_id`), 
  KEY `supplier_voucher_index` (`supplier_id`, `voucher_id`)
)ENGINE = INNODB DEFAULT CHARSET = utf8 COMMENT = '商户营销活动券基础信息表';